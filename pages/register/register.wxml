<!--pages/login/login.wxml-->
<view class="login">
  <t-input class="ipt" placeholder="请输入用户名" label="slot">
    <text slot="label">用户名</text>
  </t-input>
  <t-input class="ipt"  placeholder="请输入密码" label="slot">
    <text slot="label">密码</text>
  </t-input>
  <t-input class="ipt"  placeholder="请确认密码" label="slot">
    <text slot="label">确认密码<text style="color: #e34d59"> *</text> </text>
  </t-input>
  <t-button class="btn" theme="primary" size="large" shape="square" block>注册</t-button>
</view>