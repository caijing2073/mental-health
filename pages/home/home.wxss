.swiper-home .swiper-box {
  margin: 0 12rpx;
  border-radius: 16rpx;
  overflow: hidden;
  transform: translateY(0);
}

.swiper-home .item .img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.item-display_wrap {
  width: 100vw;
  box-sizing: border-box;
  padding: 22rpx 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.item-display_wrap .icon-wrap {
  width: calc(100% / 4);
  height: 136rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.item-display_wrap .icon-wrap .icon-container {
  width: 100rpx;
  height: 136rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.item-display_wrap .icon {
  height: 100rpx;
  width: 100rpx;
}

.item-display_wrap .desc {
  font-size: 26rpx;
  font-weight: 300;
  text-align: center;
}